<h1>New product</h1>

<%= error_messages_for :product %>

<% form_for(@product) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Brand</b><br />
    <%= f.text_field :brand %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Our Price</b><br />
    <%= f.text_field :our_price %>
  </p>

  <p>
    <b>Customer Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Quantity Available</b><br />
    <%= f.text_field :availability %>
  </p>

  <p>
    <b>Reorder Limit</b><br />
    <%= f.text_field :reorder_quantity %>
  </p>

  <p>
    <b>Image url</b><br />
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>
