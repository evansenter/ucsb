<div class="new_comment">
<%= error_messages_for :comment %>

<% form_for(@comment) do |f| %>
  <p>
    <b>Name</b><br />
      <%= f.text_field :name %>
  </p>
  <p>
    <b>Message</b><br />
      <%= f.text_area :body, :size => "40x8" %>
  </p>
  <p>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.submit "Create" %>
  </p>
<% end %>
</div>
