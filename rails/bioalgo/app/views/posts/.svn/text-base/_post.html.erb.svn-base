<h2><%= link_to (h post.title), post %></h2>
<h3><%= post.updated_at %></h3>
<p><%= highlight post.body %></p>
<div id="post_info">
  <p>
    <strong>Comments: </strong><%= post.comments.size %>, <strong>Tags: </strong><%=h clean_tags(post) %>
  </p>
</div>
<p>
  <%= link_to 'Show', post %> |
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Destroy', post, :confirm => "Are you sure?", :method => :delete %>
</p>
