<%= render(:partial => "post", :object => @post) %>

<div id="post_info">
  <p>
    <strong>Tags: </strong><%=h clean_tags %>
  </p>
</div>
<p>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</p>

<div id="comments">
  <%= render(:partial => "comment", :collection => @post.comments) %><br />
  <%= render(:partial => "new_comment", :object => @comment) %>
</div>
