<center><%= error_messages_for :work_session %></center>

<% form_for :work_session, :url => { :action => :close } do |f| %>
  <table align=center>
    <tr>
      <td>
	<p><ul>
	  <li><b>name: </b><br>
	    <%= f.text_field :name, :size => 30 %></li>
	  <li><b>project: </b><br>
	    <%= f.text_field :project, :size => 28 %></li>
	</ul></p>
      </td>
      <td>
	  <%= f.submit "finish working..." %>
	  <%= button_to '...go back', work_sessions_path %>
      </td>
    </tr>
  </table>
<% end %>
